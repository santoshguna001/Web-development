<%- include('../partials/header') %>

    <div class="container">
        <form action="/user/<%=id%>/analyze" method="post" style='width: 50%; margin: auto auto;'>
            <div class="form-group">
                <div class="form-group">
                    <label for="facebookid">Facebook ID</label>
                    <input type="text" class="form-control" id="facebookid" name='facebookid' placeholder="Enter facebook id">
                </div>
                <div class="form-group">
                    <label for="instagramid">Instagram ID</label>
                    <input type="text" class="form-control" id="instagramid" name='instagramid' placeholder="Enter instagram id">
                </div>
                <div class="form-group">
                    <label for="redditid">Reddit ID</label>
                    <input type="text" class="form-control" id="redditid" name='redditid' placeholder="Enter reddit id">
                </div>
                <div class="form-group">
                    <label for="twitterid">Twitter ID</label>
                    <input type="text" class="form-control" id="twitterid" name='twitterid' placeholder="Enter twitter id">
                </div>
                <div class="checkbox">
                    <label><input name="imageAnalysis" type="checkbox" value="True"> Image Analysis</label>
                </div>
                <button type="submit" class="btn btn-secondary" style="margin: 10px auto; display: block;">Submit</button>
        </form>
        </div>

        <%- include('../partials/footer') %>