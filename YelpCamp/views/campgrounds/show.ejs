<%- include('../partials/header') %>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">YelpCamp</p>
                <div class="list-group">
                    <li class="list-group-item active">Info</li>
                    <li class="list-group-item">Info</li>
                    <li class="list-group-item">Info</li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="card">
                    <img src='<%= campground.image %>' class='img-responsive'>
                    <div class="caption-full">
                        <h4 class="float-right">$9.00/night</h4>
                        <h4>
                            <a href=''>
                                <%= campground.name%>
                            </a>
                        </h4>
                        <p>
                            <%= campground.description %>
                        </p>
                        <p><em> Submitted by <%= campground.author.username%></em></p>
                    </div>
                </div>
                <div class="card card-body bg-light">
                    <div class=" float-right">
                        <a class='btn btn-success float-right' href="/campgrounds/<%=campground._id%>/comments/new">Add New Comment</a>
                    </div>
                    <hr>
                    <% campground.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%= comment.author.username %></strong>
                                <span class="float-right">10 days ago</span>
                                <p>
                                    <%= comment.text %>
                                </p>

                            </div>

                        </div>
                        <% }) %>
                </div>
            </div>
        </div>
    </div>



    <p>

    </p>
    <p>
        <a class='btn btn-primary' href="/campgrounds">Go Back</a>
    </p>


    <%- include('../partials/footer') %>